<% if (!user) { %>
  <script defer src="https://accounts.google.com/gsi/client"></script>
<% } %>
</head>
<body>
<nav>
  <a href="/cryptids">
    <button id="nav-btn" class="btn">🦇 Latest Sightings</button>
  </a>
  <a href="/cryptids/new">
    <button id="nav-btn" class="btn">👻 Add a Cryptid</button>
  </a>
  <a href="/profiles">
    <button id="nav-btn" class="btn">👽 Profiles</button>
  </a>
  <% if (user) { %>
    <a href="/auth/logout">
      <button id="nav-btn" class="btn">✌️ Log Out</button>
    </a>
  <% } else { %>
    <div 
      id="g_id_onload"
      data-client_id="<%= googleClientID %>"
      data-login_uri="/auth/google"
      data-auto_prompt="false"
    ></div>
    <div 
      class="g_id_signin"
      data-type="standard"
      data-size="large"
      data-theme="outline"
      data-text="sign_in_with"
      data-shape="rectangular"
      data-logo_alignment="left"
    ></div>
  <% } %>
</nav>