<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/cryptids/edit.css">
<%- include('../partials/nav') %>

<section>
  <div class="edit-form-container">
    <h2>Edit this Cryptid! ✏️👻</h2>
    <form id="edit-form" action="/cryptids/<%= cryptid._id %>?_method=PUT" method="POST">
      <label>
        Name: 
      </label>
      <input 
        id="name-input"
        type="text"
        name="name" 
        value="<%= cryptid.name %>" 
        autocomplete="off"
      >
      <label for="spotted-date-input">Date Spotted:</label>
      <input type="datetime-local" value="<%= spottedDefaultDate %>" name="spotted" id="spotted-date-input">
      <label for="description-input">Description:</label>
      <textarea name="description" id="description-input"><%= cryptid.description %></textarea>
      <button id="edit-cryptid-btn" class="btn" type="submit">Edit Cryptid ✏️👻</button>
    </form>
  </div>
</section>

<%- include('../partials/footer') %>