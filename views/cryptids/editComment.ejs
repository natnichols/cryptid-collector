<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/cryptids/editComment.css">
<%- include('../partials/nav') %>

<section>
  <div class="edit-comment-container">
    <h2>Edit your comment 📝🦇</h2>
    <form
      id="edit-comment-form"
      action="/cryptids/<%= cryptid._id %>/comments/<%= comment._id %>?_method=PUT"
      method="POST"
    >
      <label>
        Content: 
      </label>
      <textarea
        id="content-input"
        cols="30"
        rows="5" 
        type="text"
        name="content" 
        autocomplete="off"
      ><%= comment.content %></textarea>
      <button id="update-comment-btn" class="btn" type="submit">Update Comment</button>
    </form>
  </div>
</section>

<%- include('../partials/footer') %>